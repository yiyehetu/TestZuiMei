<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_bild"
            style="@style/TextViewBottomBar"
            android:drawableTop="@drawable/nav_bottom_img_bild"
            android:text="@string/first_pager"/>

        <TextView
            android:id="@+id/tv_main_havething"
            style="@style/TextViewBottomBar"
            android:drawableTop="@drawable/nav_bottom_img_havething"
            android:text="@string/second_pager"/>

        <TextView
            android:id="@+id/tv_main_designer"
            style="@style/TextViewBottomBar"
            android:drawableTop="@drawable/nav_bottom_img_designer"
            android:text="@string/third_pager"/>

        <TextView
            android:id="@+id/tv_main_me"
            style="@style/TextViewBottomBar"
            android:drawableTop="@drawable/nav_bottom_img_me"
            android:text="@string/four_pager"/>
    </LinearLayout>

</LinearLayout>
