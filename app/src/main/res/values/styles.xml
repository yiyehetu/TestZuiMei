<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white_90_alpha</item>
    </style>

    <style name="TextViewBottomBar">
        <item name="android:textColor">@color/nav_bottom_text_color</item>
        <item name="android:textSize">@dimen/textsize_0</item>
        <item name="android:checkable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
    </style>
    <!--
     app:tabBackground="@color/designer_tab_bg_color"
        app:tabTextColor="@color/main_tab_title_normal"
        app:tabSelectedTextColor="@android:color/white"
        app:tabMode="scrollable"
        app:tabMaxWidth="100dp"
        app:tabMinWidth="50dp"
        app:tabIndicatorColor="@color/black_tab_stroke"
    -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/designer_tab_max_width</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@color/designer_tab_bg_color</item>
        <item name="tabIndicatorColor">@color/black_tab_stroke</item>
        <item name="tabIndicatorHeight">@dimen/designer_tab_bottom_line_height</item>
        <item name="tabPaddingStart">@dimen/designer_tab_indicator_item_padding_left</item>
        <item name="tabPaddingEnd">@dimen/designer_tab_indicator_item_padding_right</item>
        <item name="tabTextAppearance">@style/CustomTabAppearance</item>
    </style>
    
    <style name="CustomTabAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/main_tab_title_normal</item>
        <item name="android:textSize">@dimen/textsize_1</item>
    </style>

    <style name="FullScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
